programa {
  funcao inicio() {
    inteiro numero
    escreva("Digite a porcaria do número: ")
    leia(numero)
    
    se(numero > 0){ // testar se é positivo
      escreva("Positivo :D")
    }senao se(numero < 0){ // testar se é negativo
      escreva("Negativo")
    }senao{ // testar se é zero
      escreva("Zero!!")
    }
  }
}

